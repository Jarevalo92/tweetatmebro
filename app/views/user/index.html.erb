<div class="container">
<% @users.each do |user| %>
  <div class="widget">
    <header>
      <figure><img src="<%=user.picture%>" alt="pic face" /></figure>
      <div>
        <h2><%= user.name%></h2>
        <h3>@<%=user.name%></h3>
        <div class="clear"></div>
      </div>
    </header>
  <ul>
      <li class="info" id="tweets">     <h2><%=user.comments.count%></h2><p> TWEETS</p></li>
      <li class="info" id="following"><h2><%=30%></h2><p> FOLLOWING</p></li>
      <li class="info" id="followers"><h2><%=user.followers.count%></h2></h2>FOLLOWERS</p></li>
  </ul>
  <button>TWEETAR</button>
  <input type="text" placeholder=<%=user.name%>/>
  </div>
<%end%>
</div>
